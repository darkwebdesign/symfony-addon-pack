{
    "name": "darkwebdesign/symfony-addon-transformers",
    "type": "library",
    "description": "Symfony Add-on Transformers",
    "keywords": ["symfony", "transformers"],
    "homepage": "https://www.darkwebdesign.nl/",
    "license": "MIT",
    "authors": [
        {"name": "Raymond Schouten"}
    ],
    "require": {
        "php": "^8.2",
        "symfony/form": "7.2.*"
    },
    "require-dev": {
        "doctrine/orm": "^2.7",
        "friendsofphp/php-cs-fixer": "^3.58",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.11",
        "phpstan/phpstan-doctrine": "^1.4",
        "phpstan/phpstan-phpunit": "^1.4",
        "phpstan/phpstan-symfony": "^1.4",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^1.1"
    },
    "suggest": {
        "darkwebdesign/symfony-addon-pack": "All Symfony add-ons bundled together",
        "doctrine/orm": "Required for EntityToIdentifierTransformer"
    },
    "conflict": {
        "doctrine/orm": "<2.7"
    },
    "autoload": {
        "psr-4": {
            "DarkWebDesign\\SymfonyAddonTransformers\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DarkWebDesign\\SymfonyAddonTransformers\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    }
}
